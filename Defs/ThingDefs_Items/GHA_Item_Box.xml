<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Item Box Sample -->

	<ThingDef ParentName="ResourceBase">
		<defName>GHA_Syndicate_Capsule</defName>
		<label>Syndicate Capsule</label>
		<description>.</description>
		<graphicData>
			<texPath>Things/Item/Special/GHA_SyndicateCapsule</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
