<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_Gha_PlasmaRifle</defName>
        <label>plasma assault rifle</label>
        <description>A charged-shot assault rifle. Pulse-charge technology charges each shot with unstable energy as it leaves the barrel. Released on impact, the charged energy greatly increases the damage done.</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
          <texPath>Things/Item/Equipment/WeaponRanged/Gha_PlasmaRifle</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>1.2</drawSize>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        <statBases>
          <WorkToMake>45000</WorkToMake>
          <Mass>4.6</Mass>
          <AccuracyTouch>0.55</AccuracyTouch>
          <AccuracyShort>0.64</AccuracyShort>
          <AccuracyMedium>0.75</AccuracyMedium>
          <AccuracyLong>0.55</AccuracyLong>
          <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
        </statBases>

        <recipeMaker>
          <researchPrerequisite>Gha_Research_Plasma_Weaponry</researchPrerequisite>
          <skillRequirements>
            <Crafting>7</Crafting>
          </skillRequirements>
          <recipeUsers Inherit="False">
            <li>FabricationBench</li>
          </recipeUsers>
          <displayPriority>200</displayPriority>
        </recipeMaker>
        <costList>
          <Plasteel>75</Plasteel>
          <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <thingSetMakerTags>
          <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <weaponTags>
          <li>SpacerGun</li>
        </weaponTags>
        <tradeTags>
          <li>WeaponRanged</li>
        </tradeTags>
        <weaponClasses>
          <li>RangedLight</li>
        </weaponClasses>
        <verbs>
          <li>
            <verbClass>Verb_Shoot</verbClass>
            <hasStandardCommand>true</hasStandardCommand>
            <defaultProjectile>Bullet_Gha_PlasmaRifle</defaultProjectile>
            <warmupTime>1.3</warmupTime>
            <range>30.5</range>
            <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
            <burstShotCount>5</burstShotCount>
            <soundCast>Gha_Shot_PlasmaRifle</soundCast>
            <soundCastTail>GunTail_Medium</soundCastTail>
            <muzzleFlashScale>9</muzzleFlashScale>
          </li>
        </verbs>
        <tools>
          <li>
            <label>stock</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
          </li>
          <li>
            <label>barrel</label>
            <capacities>
              <li>Blunt</li>
              <li>Poke</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
          </li>
        </tools>
      </ThingDef>
      <ThingDef ParentName="BaseBullet">
        <defName>Bullet_Gha_PlasmaRifle</defName>
        <label>plasma shot</label>
        <graphicData>
          <texPath>Things/Projectiles/Det_Bullet_Plasma</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
          <damageDef>Gha_PlasmaDamage</damageDef>
          <damageAmountBase>17</damageAmountBase>
          <armorPenetrationBase>0.65</armorPenetrationBase>
          <speed>75</speed>
          <bulletChanceToStartFire>0.3</bulletChanceToStartFire>
        </projectile>
      </ThingDef>

